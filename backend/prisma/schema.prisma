generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Parish {
  id         Int       @id @default(autoincrement())
  name       String
  city       String?
  state      String?
  communities Community[]
}

model Community {
  id        Int       @id @default(autoincrement())
  name      String
  parishId  Int
  parish    Parish    @relation(fields: [parishId], references: [id])
  dizimistas Dizimista[]
}

model Dizimista {
  id          Int          @id @default(autoincrement())
  name        String
  family      String?
  cpf         String?      @unique
  email       String?
  phone       String?
  communityId Int
  community   Community    @relation(fields: [communityId], references: [id])
  contributions Contribution[]
}

model Contribution {
  id          Int       @id @default(autoincrement())
  dizimista   Dizimista?  @relation(fields: [dizimistaId], references: [id])
  dizimistaId Int?
  amount      Decimal   @db.Decimal(10,2)
  method      String
  type        String    // 'dizimo' | 'oferta' | 'doacao'
  date        DateTime  @default(now())

  // Dízimo específico
  month       Int?
  year        Int?

  // Oferta / Missa
  massDate    DateTime?

  // Relação com denominações
  denominations ContributionDenomination[]

  note        String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt @default(now())

}

model ContributionDenomination {
  id             Int     @id @default(autoincrement())
  contribution   Contribution @relation(fields: [contributionId], references: [id])
  contributionId Int
  kind           String  // 'note' ou 'coin'
  value          Decimal @db.Decimal(10,2)
  quantity       Int
}
